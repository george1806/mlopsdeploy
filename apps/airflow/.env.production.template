# Production Environment Template for Airflow
# Copy this file to .env.local and update all values for production use

# Harbor
HARBOR_URL=your-harbor-registry.com
HARBOR_PROJECT=your-project
HARBOR_USER=your-harbor-user
HARBOR_ADMIN_PASSWORD=your-secure-harbor-password

# Airflow
AIRFLOW_NAMESPACE=airflow
AIRFLOW_RELEASE=airflow
AIRFLOW_CHART_VERSION=1.17.0
AIRFLOW_TAG=3.0.2
AIRFLOW_HOST=https://airflow.your-domain.com

# TLS
TLS_SECRET_NAME=airflow-tls
TLS_CERT_FILE=certs/airflow.your-domain.com.crt
TLS_KEY_FILE=certs/airflow.your-domain.com.key

# Executor
AIRFLOW_EXECUTOR=CeleryExecutor

# PostgreSQL (external)
AIRFLOW_DB_HOST=your-postgres-host
AIRFLOW_DB_PORT=5432
AIRFLOW_DB_NAME=airflow
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=your-secure-postgres-password

# Redis (external with auth)
AIRFLOW_REDIS_HOST=your-redis-host
AIRFLOW_REDIS_PORT=6379
AIRFLOW_REDIS_PASSWORD=your-secure-redis-password

# Keycloak OIDC (if using)
KEYCLOAK_HOST=https://keycloak.your-domain.com
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=airflow-client
KEYCLOAK_CLIENT_SECRET=your-secure-keycloak-client-secret

# Keycloak Admin (for client setup)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your-secure-keycloak-admin-password

# Deployment Mode
OFFLINE_MODE=true

# ===== IMPORTANT: CHANGE THESE IN PRODUCTION! =====
# Generate with: openssl rand -base64 32 | head -c 32
AIRFLOW_FERNET_KEY=GENERATE_32_CHAR_FERNET_KEY_HERE

# Generate with: openssl rand -hex 32
AIRFLOW_WEBSERVER_SECRET_KEY=GENERATE_64_CHAR_HEX_SECRET_KEY_HERE

# Admin User Credentials
AIRFLOW_ADMIN_USERNAME=your-admin-username
AIRFLOW_ADMIN_PASSWORD=your-secure-admin-password
AIRFLOW_ADMIN_EMAIL=admin@your-domain.com
AIRFLOW_ADMIN_FIRSTNAME=Admin
AIRFLOW_ADMIN_LASTNAME=User

# Production Key Generation Commands:
# AIRFLOW_FERNET_KEY: openssl rand -base64 32 | head -c 32
# AIRFLOW_WEBSERVER_SECRET_KEY: openssl rand -hex 32